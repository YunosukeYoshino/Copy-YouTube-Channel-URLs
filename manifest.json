{
  "manifest_version": 3,
  "name": "Copy YouTube Channel URLs",
  "version": "0.1.0",
  "description": "Copy visible YouTube channel videos to the clipboard with a single click.",
  "permissions": ["activeTab", "clipboardWrite"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["dist/contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "src/logo.png",
    "48": "src/logo.png",
    "128": "src/logo.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Copy YouTube Channel URLs",
    "default_icon": {
      "16": "src/logo.png",
      "48": "src/logo.png",
      "128": "src/logo.png"
    }
  }
}
